{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2023"],
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "dist-server",
    "rootDir": "src",
    "sourceMap": false,
    "noEmit": false,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@/shared/types": ["src/types/api.ts"]
    }
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "src/**/*.tsx",
    "src/App.tsx",
    "src/main.tsx",
    "src/pages/**",
    "src/components/**",
    "src/hooks/**"
  ]
}